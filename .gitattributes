# .gitattributes - Configure line endings for different file types

# Default behavior: normalize line endings to LF on checkin, 
# convert to native line endings on checkout
* text=auto

# Source code files - always use LF
*.cpp text eol=lf
*.hpp text eol=lf
*.h text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# CMake files - always use LF
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Windows batch files - always use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts - always use LF
*.sh text eol=lf

# Make shell scripts executable on checkout
*.sh text eol=lf

# Documentation files
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.ini text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files (don't touch line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
